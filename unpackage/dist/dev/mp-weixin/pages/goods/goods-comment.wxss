.content {
  width: 94%;
  padding: 0 3%;
}
.content view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.content .label {
  width: 100%;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.content .label view {
  padding: 0 20rpx;
  height: 50rpx;
  border-radius: 40rpx;
  border: solid 1rpx #ddd;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  color: #555;
  font-size: 26rpx;
  background-color: #f9f9f9;
  margin: 10rpx 20rpx 10rpx 0;
}
.content .label view.on {
  border: solid 1rpx #f06c7a;
  color: #f06c7a;
}
.list {
  width: 100%;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  padding: 20rpx 0;
}
.list .ratings {
  width: 100%;
  margin-top: 30rpx;
}
.list .ratings .left {
  width: 10vw;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  margin-right: 10rpx;
}
.list .ratings .left .face {
  width: 100%;
}
.list .ratings .left .face image {
  width: 10vw;
  height: 10vw;
  border-radius: 100%;
}
.list .ratings .right {
  width: 100%;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.list .ratings .right .name-date {
  width: 100%;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: baseline;
  -webkit-align-items: baseline;
          align-items: baseline;
}
.list .ratings .right .name-date .username {
  font-size: 32rpx;
  color: #555;
}
.list .ratings .right .name-date .date {
  font-size: 28rpx;
  color: #aaa;
}
.list .ratings .right .spec {
  width: 100%;
  color: #aaa;
  font-size: 26rpx;
}
.list .ratings .right .medias {
  width: 100%;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.list .ratings .right .medias .content {
  font-size: 30rpx;
}
.list .ratings .right .medias .img-video {
  width: 100%;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.list .ratings .right .medias .img-video .box {
  width: calc((84.6vw - 50rpx)/4);
  height: calc((84.6vw - 50rpx)/4);
  margin: 5rpx 5rpx;
  position: relative;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.list .ratings .right .medias .img-video .box image {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.list .ratings .right .medias .img-video .box .playbtn {
  position: absolute;
}
.list .ratings .right .medias .img-video .box .playbtn .icon {
  font-size: 80rpx;
  color: rgba(255, 255, 255, 0.9);
}
.myVideo {
  position: fixed;
  top: 50%;
  right: 100%;
  top: 0;
  right: 0;
  z-index: 99;
  width: 100%;
  height: 100%;
}

